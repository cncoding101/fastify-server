{
  "extends": "./tsconfig.json",
  "include": ["src/wcs/**/*.ts"],
  "compilerOptions": {
    "pretty": true,
    "target": "ES2015",
    "module": "ES2015",
    "importHelpers": false,
    "outDir": "dist/static",
    "sourceMap": false,
    "strict": false
  },
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  }
}
